@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card text-center">

        <div class="auth-logo mb-3">
            <img src="~/img/logo.png" />
        </div>

        <h2 class="text-danger mb-2">Acesso Negado</h2>
        <p class="text-danger">Você não tem permissão para acessar este recurso.</p>

        <a href="~/" class="auth-btn mt-3">Voltar ao início</a>
    </div>
</div>
