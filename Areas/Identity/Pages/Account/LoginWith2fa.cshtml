@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Autenticação de Dois Fatores";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card text-center">

        <div class="auth-logo mb-3">
            <img src="~/img/logo.png" />
        </div>

        <h2 class="auth-title mb-3">Confirme sua Identidade</h2>

        <p class="text-info mb-3">
            Sua conta está protegida com autenticação de dois fatores.<br />
            Insira o código do seu aplicativo autenticador.
        </p>

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">

            <input asp-for="RememberMe" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-warning mb-2"></div>

            <div class="mb-3">
                <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                <input asp-for="Input.TwoFactorCode"
                       class="form-control auth-input"
                       autocomplete="off" />
                <span asp-validation-for="Input.TwoFactorCode" class="text-warning"></span>
            </div>

            <div class="form-check mb-3 text-start">
                <input asp-for="Input.RememberMachine" class="form-check-input" />
                <label asp-for="Input.RememberMachine" class="form-check-label"></label>
            </div>

            <button type="submit" class="auth-btn w-100">Entrar</button>
        </form>

        <p class="mt-3">
            Sem acesso ao app autenticador?
            <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">
                Entrar com código de recuperação
            </a>
        </p>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
