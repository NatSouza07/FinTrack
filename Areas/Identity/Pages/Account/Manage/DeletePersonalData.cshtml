@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Excluir Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h1 class="ft-title mb-4">
    <i class="bi bi-person-x me-2"></i> Excluir Dados Pessoais
</h1>

<div class="alert alert-warning border-warning">
    <strong>
        A exclusão desta conta é permanente e não poderá ser recuperada.
    </strong>
</div>

<div class="ft-card p-4 col-md-6">

    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

        @if (Model.RequirePassword)
        {
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password"
                       class="form-control"
                       autocomplete="current-password"
                       aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-warning"></span>
            </div>
        }

        <button class="btn btn-danger w-100 fw-semibold" type="submit">
            Excluir dados e encerrar minha conta
        </button>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
