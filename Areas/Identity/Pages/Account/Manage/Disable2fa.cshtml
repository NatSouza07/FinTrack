@page
@model Disable2faModel
@{
    ViewData["Title"] = "Desativar Autenticação 2FA";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />

<h1 class="ft-title mb-4">
    <i class="bi bi-shield-slash me-2"></i> Desativar 2FA
</h1>

<div class="alert alert-warning border-warning">
    <p><strong>Esta ação apenas desativa o 2FA.</strong></p>

    <p>
        Desativar o 2FA não altera a chave usada no aplicativo autenticador.
        Caso você deseje gerar uma nova chave, acesse:
        <a asp-page="./ResetAuthenticator" class="text-decoration-underline">
            redefinir chave do autenticador
        </a>.
    </p>
</div>

<div class="ft-card p-4 col-md-6">

    <form method="post">
        <button class="btn btn-danger w-100 fw-semibold" type="submit">
            Desativar 2FA
        </button>
    </form>

</div>
