@page
@model EmailModel
@{
    ViewData["Title"] = "Gerenciar E-mail";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="ft-manage-header">
    <h1 class="ft-manage-title">Gerenciar E-mail</h1>
    <p class="ft-manage-subtitle">Atualize seu e-mail ou reenvie a verificação</p>
</div>

<div class="manage-card">
    <h3><i class="bi bi-envelope-at me-2"></i> Gerenciar E-mail</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <!-- FORM ALTERAR E-MAIL -->
    <form method="post" asp-page-handler="ChangeEmail" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- EMAIL ATUAL -->
        <div class="form-floating mb-3">
            <input asp-for="Email"
                   class="form-control"
                   placeholder="E-mail atual"
                   disabled />
            <label asp-for="Email">E-mail atual</label>
        </div>

        <!-- NOVO E-MAIL -->
        <div class="form-floating mb-3">
            <input asp-for="Input.NewEmail"
                   class="form-control"
                   placeholder="Novo e-mail" />
            <label asp-for="Input.NewEmail">Novo e-mail</label>
            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
        </div>

        <button type="submit" class="btn ft-btn-primary w-100">
            Alterar E-mail
        </button>
    </form>

    <hr class="my-4" />

    <!-- FORM REENVIAR E-MAIL DE VERIFICAÇÃO -->
    <form method="post" asp-page-handler="SendVerificationEmail">
        <button type="submit" class="btn ft-btn-primary w-100">
            Reenviar e-mail de verificação
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
