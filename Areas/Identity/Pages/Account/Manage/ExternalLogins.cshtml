@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Gerenciar Logins Externos";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="manage-card mb-4">

    @if (Model.CurrentLogins?.Count > 0)
    {
        <h3 class="mb-3">Logins Registrados</h3>

        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <tbody>
                    @foreach (var login in Model.CurrentLogins)
                    {
                        <tr>
                            <td id="@($"login-provider-{login.LoginProvider}")" class="fw-semibold">
                                @login.ProviderDisplayName
                            </td>
                            <td class="text-end">
                                @if (Model.ShowRemoveButton)
                                {
                                    <form id="@($"remove-login-{login.LoginProvider}")"
                                          asp-page-handler="RemoveLogin"
                                          method="post"
                                          class="d-inline">
                                        <input type="hidden" name="LoginProvider" value="@login.LoginProvider" />
                                        <input type="hidden" name="ProviderKey" value="@login.ProviderKey" />

                                        <button type="submit"
                                                class="btn btn-danger btn-sm"
                                                title="Remover login @login.ProviderDisplayName da sua conta">
                                            Remover
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>

@if (Model.OtherLogins?.Count > 0)
{
    <div class="manage-card">
        <h4 class="mb-3">Adicionar outro serviço de login</h4>
        <hr />

        <form id="link-login-form" asp-page-handler="LinkLogin" method="post">
            <div id="socialLoginList" class="d-flex flex-wrap gap-2">
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="@($"link-login-button-{provider.Name}")"
                            type="submit"
                            class="btn btn-primary"
                            name="provider"
                            value="@provider.Name"
                            title="Entrar usando sua conta @provider.DisplayName">

                        @provider.DisplayName
                    </button>
                }
            </div>
        </form>
    </div>
}
