@page
@model IndexModel
@{
    ViewData["Title"] = "Meu Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="ft-manage-header">
    <h1 class="ft-manage-title">Gerenciar Conta</h1>
    <p class="ft-manage-subtitle">Atualize suas informações pessoais e configurações de segurança</p>
</div>

<div class="manage-card mb-4">
    <h3 class="mb-3"><i class="bi bi-person-circle me-2"></i> Meu Perfil</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post" enctype="multipart/form-data" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Input.Nickname"></label>
            <input asp-for="Input.Nickname" class="form-control" />
            <span asp-validation-for="Input.Nickname" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Foto de Perfil (PNG)</label>
            <input type="file" class="form-control" asp-for="Input.FotoPerfil" accept="image/png" />
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Username" class="form-control" disabled />
            <label asp-for="Username">E-mail do Usuário</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <label asp-for="Input.PhoneNumber">Número de Telefone</label>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <button type="submit" class="btn ft-btn-primary w-100">Salvar Alterações</button>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
