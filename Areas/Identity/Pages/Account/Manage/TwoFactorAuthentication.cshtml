@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Autenticação em Duas Etapas (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="ft-manage-header">
    <h1 class="ft-manage-title">Autenticação em Duas Etapas (2FA)</h1>
    <p class="ft-manage-subtitle">
        Adicione uma camada extra de segurança à sua conta utilizando um aplicativo autenticador.
    </p>
</div>

<div class="manage-card mb-4">

    <partial name="_StatusMessage" for="StatusMessage" />

    @if (!Model.Is2faEnabled)
    {
        <p class="text-light mb-3">
            A autenticação 2FA está desativada. Ative para aumentar sua segurança.
        </p>

        <a class="btn ft-btn-primary w-100 mb-3" asp-page="./EnableAuthenticator">
            <i class="bi bi-shield-check me-2"></i> Ativar Autenticador
        </a>
    }
    else
    {
        <p class="text-light mb-3">
            Sua conta está protegida com 2FA.
        </p>

        <a class="btn ft-btn-primary w-100 mb-3" asp-page="./EnableAuthenticator">
            <i class="bi bi-phone me-2"></i> Configurar Novo Autenticador
        </a>

        <a class="btn ft-btn-danger w-100 mb-3" asp-page="./ResetAuthenticator">
            <i class="bi bi-arrow-clockwise me-2"></i> Redefinir Autenticador
        </a>

        <a class="btn btn-secondary w-100" asp-page="./Disable2fa">
            <i class="bi bi-shield-x me-2"></i> Desativar 2FA
        </a>
    }
</div>
