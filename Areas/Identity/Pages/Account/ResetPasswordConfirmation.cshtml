@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Senha Redefinida";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card text-center">

        <div class="auth-logo mb-3">
            <img src="~/img/logo.png" />
        </div>

        <h2 class="auth-title mb-3">Senha Redefinida com Sucesso</h2>

        <p class="text-info">
            Sua senha foi alterada com sucesso.
            Clique abaixo para entrar novamente.
        </p>

        <a asp-page="./Login" class="auth-btn mt-3">Fazer Login</a>

    </div>
</div>
