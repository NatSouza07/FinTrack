@model FinTrack.Models.Meta
@{
    ViewData["Title"] = "Nova Meta";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int mesAtual = DateTime.Now.Month;
    int anoAtual = DateTime.Now.Year;
}

<div class="ft-page-container">

    <h2 class="fw-bold text-white mb-3">Nova Meta</h2>
    <p class="text-secondary mb-4">Defina uma meta financeira mensal.</p>

    <div class="ft-card p-4">

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="ValorMeta" class="form-label text-white-50"></label>
                <input asp-for="ValorMeta" class="form-control money" inputmode="numeric" />
                <span asp-validation-for="ValorMeta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Mes" class="form-label text-white-50"></label>
                <select asp-for="Mes" class="form-select">
                    @for (int m = 1; m <= 12; m++)
                    {
                        if (m == mesAtual)
                        {
                            <option value="@m" selected>
                                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)
                            </option>
                        }
                        else
                        {
                            <option value="@m">
                                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="Mes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ano" class="form-label text-white-50"></label>
                <select asp-for="Ano" class="form-select">
                    @for (int a = anoAtual - 5; a <= anoAtual + 10; a++)
                    {
                        if (a == anoAtual)
                        {
                            <option value="@a" selected>@a</option>
                        }
                        else
                        {
                            <option value="@a">@a</option>
                        }
                    }
                </select>
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>

            <div class="mt-4 d-flex gap-3">
                <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>

                <button type="submit"
                        class="btn fw-bold px-4"
                        style="background:#ffd700; color:#000; border-radius:10px;">
                    Salvar Meta
                </button>
            </div>

        </form>

    </div>

</div>

<style>
    .ft-card {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        backdrop-filter: blur(12px);
    }

    .ft-main-content {
        background: #1e1e1e !important;
        padding: 40px !important;
        min-height: 100vh;
    }

    .ft-page-container {
        max-width: 1100px;
        margin: 0 auto;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            if (window.AutoNumeric) {
                AutoNumeric.multiple('.ft-money', {
                    digitGroupSeparator: ".",
                    decimalCharacter: ",",
                    decimalPlaces: 2,
                    currencySymbol: "R$ ",
                    currencySymbolPlacement: "p"
                });
            }

            const form = document.querySelector('form[asp-action="Create"], form[asp-action="Edit"], form');
            if (form) {
                form.addEventListener('submit', function () {
                    document.querySelectorAll('.ft-money').forEach(function (el) {
                        if (!el) return;
                        let v = el.value ?? '';
                        v = v.replace(/\s/g, '');
                        v = v.replace(/R\$|r\$/g, '');
                        v = v.replace(/\./g, '');
                        el.value = v;
                    });
                }, { once: false });
            }
        });
    </script>
}
