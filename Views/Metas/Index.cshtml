@model IEnumerable<FinTrack.Models.Meta>
@{
    ViewData["Title"] = "Metas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ft-page-container">
    <h2 class="fw-bold text-white mb-1">Metas</h2>
    <p class="text-secondary mb-4">Acompanhe suas metas mensais e o progresso.</p>

    <div class="ft-card p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="text-white-50 mb-0">Lista de Metas</h5>
            <a asp-action="Create" class="btn ft-btn-primary">+ Nova Meta</a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center text-secondary py-4">Nenhuma meta cadastrada.</div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var m in Model)
                {
                    <div class="col-12">
                        <div class="p-3 mb-3" style="background: rgba(0,0,0,0.35); border-radius: 10px; border:1px solid rgba(255,255,255,0.03);">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-bold text-white">@m.Mes/@m.Ano — @m.ValorMeta.ToString("C")</div>
                                    <div class="text-secondary small">Progresso: @m.ProgressoCalculado.ToString("C")</div>
                                </div>
                                <div class="text-end">
                                    @if (m.Porcentagem >= 100)
                                    {
                                        <span class="badge bg-success">Atingida</span>
                                    }
                                    <div class="mt-2">
                                        <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-sm btn-secondary">Ver</a>
                                        <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-primary">Editar</a>
                                        <a asp-action="Delete" asp-route-id="@m.Id" class="btn btn-sm btn-danger">Excluir</a>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3">
                                @{
                                    var pct = m.Porcentagem;
                                    var barClass = pct >= 70 ? "ft-progress-green" : (pct >= 30 ? "ft-progress-blue" : "ft-progress-red");
                                }
                                <div class="d-flex justify-content-between mb-1 small text-white-50">
                                    <div>Meta alcançada</div>
                                    <div><strong>@pct%</strong></div>
                                </div>
                                <div class="progress" style="height:12px; background: rgba(255,255,255,0.04); border-radius:8px;">
                                    <div class="progress-bar @barClass" role="progressbar"
                                         style="width:@pct%; transition: width 1s ease;"
                                         aria-valuenow="@pct" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .ft-card {
        background: rgba(255,255,255,0.03);
        border-radius: 12px;
    }

    .ft-progress-green {
        background: linear-gradient(90deg,#3ad76a,#2bb06a);
    }

    .ft-progress-blue {
        background: linear-gradient(90deg,#3ea5ff,#2b8bff);
    }

    .ft-progress-red {
        background: linear-gradient(90deg,#ff6b6b,#e64545);
    }

    .ft-main-content {
        background: #1e1e1e !important;
        padding: 40px !important;
        min-height: 100vh;
    }

    .ft-page-container {
        max-width: 1100px;
        margin: 0 auto;
    }
</style>

