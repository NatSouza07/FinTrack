@using System.Globalization
@{
    ViewData["Title"] = "Relatório Pivot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ft-page-container">

    <h2 class="fw-bold text-white mb-3">Relatório Pivot</h2>
    <p class="text-secondary mb-4">Tabela dinâmica por Categoria × Mês.</p>

    <div class="ft-card p-4">

        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr class="text-warning">
                    <th>Categoria</th>
                    @for (int m = 1; m <= 12; m++)
                    {
                        <th>@CultureInfo.CurrentCulture.DateTimeFormat.GetAbbreviatedMonthName(m)</th>
                    }
                </tr>
            </thead>

            <tbody>
                @foreach (var linha in Model)
                {
                    <tr>
                        <td class="fw-bold">@linha.Key</td>

                        @for (int i = 0; i < 12; i++)
                        {
                            <td>@linha.Value[i].ToString("C")</td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

<style>
    .ft-card {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        backdrop-filter: blur(12px);
        padding: 24px;
    }

    .ft-page-container {
        max-width: 1100px;
        margin: 0 auto;
    }

    .ft-main-content {
        background: #1e1e1e !important;
        padding: 40px !important;
        min-height: 100vh;
    }
</style>
