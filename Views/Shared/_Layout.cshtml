@using Microsoft.AspNetCore.Identity
@using FinTrack.Models
@inject UserManager<Usuario> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinTrack</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/premium.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
</head>

<body class="ft-body">

    <nav id="sidebar" class="ft-sidebar">

        <button id="sidebarToggle" class="ft-toggle-btn">
            <i id="toggleIcon" class="bi bi-chevron-double-left"></i>
        </button>

        <div class="ft-logo-area">
            <img src="~/img/logo.png" class="ft-logo" />
        </div>

        <ul class="ft-menu">
            <li class="ft-tooltip" data-title="Dashboard">
                <a asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2"></i><span>Dashboard</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Transações">
                <a asp-controller="Transacoes" asp-action="Index">
                    <i class="bi bi-arrow-left-right"></i><span>Transações</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Contas">
                <a asp-controller="Contas" asp-action="Index">
                    <i class="bi bi-wallet2"></i><span>Contas</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Categorias">
                <a asp-controller="Categorias" asp-action="Index">
                    <i class="bi bi-tags"></i><span>Categorias</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Tipos de Pagamento">
                <a asp-controller="TiposPagamento" asp-action="Index">
                    <i class="bi bi-credit-card"></i><span>Tipos Pagamento</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Metas">
                <a asp-controller="Metas" asp-action="Index">
                    <i class="bi bi-bullseye"></i><span>Metas</span>
                </a>
            </li>
        </ul>

        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="ft-profile-box">
            @{
                var u = await UserManager.GetUserAsync(User);
                var foto = string.IsNullOrEmpty(u?.FotoPerfil) ? "/img/perfis/default.png" : u.FotoPerfil;
                var name = u?.Nickname ?? u?.UserName ?? "Usuário";
            }
            <img src="@foto" class="ft-profile-photo" />
            <div class="ft-profile-details">
                <span class="ft-profile-name">@name</span>
            </div>
        </a>

        <form method="post"
              asp-area="Identity"
              asp-page="/Account/Logout"
              class="d-inline">
            <button type="submit" class="ft-logout-btn-absolute">
                <i class="bi bi-box-arrow-right"></i>
            </button>
        </form>

    </nav>

    <div id="sidebar-spacer"></div>

    <div id="mainContent" class="ft-main-content">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show ft-alert" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show ft-alert" role="alert">
                <i class="bi bi-x-circle-fill me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show ft-alert" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.10.5"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $.validator.methods.number = function (value, element) {

            if (this.optional(element)) return true;
            if (!value) return false;
            let cleanedValue = value
                .toString()
                .replace(/\s/g, "")
                .replace(/R\$|r\$/gi, "")
                .replace(/\./g, "");

            cleanedValue = cleanedValue.replace(",", ".");

            return !isNaN(cleanedValue);
        };
    </script>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/pt.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>