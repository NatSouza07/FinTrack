<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinTrack</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/premium.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.6.0/dist/autoNumeric.min.js"></script>

</head>

<body class="ft-body">

    <nav id="sidebar" class="ft-sidebar">

        <button id="sidebarToggle" class="ft-toggle-btn">
            <i id="toggleIcon" class="bi bi-chevron-double-left"></i>
        </button>

        <div class="ft-logo-area">
            <img src="~/img/logo.png" class="ft-logo" />
        </div>

        <ul class="ft-menu">

            <li class="ft-tooltip" data-title="Dashboard">
                <a asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2"></i><span>Dashboard</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Transações">
                <a asp-controller="Transacoes" asp-action="Index">
                    <i class="bi bi-arrow-left-right"></i><span>Transações</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Contas">
                <a asp-controller="Contas" asp-action="Index">
                    <i class="bi bi-wallet2"></i><span>Contas</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Categorias">
                <a asp-controller="Categorias" asp-action="Index">
                    <i class="bi bi-tags"></i><span>Categorias</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Tipos de Pagamento">
                <a asp-controller="TiposPagamento" asp-action="Index">
                    <i class="bi bi-credit-card"></i><span>Tipos Pagamento</span>
                </a>
            </li>

            <li class="ft-tooltip" data-title="Metas">
                <a asp-controller="Metas" asp-action="Index">
                    <i class="bi bi-bullseye"></i><span>Metas</span>
                </a>
            </li>

        </ul>

        <a asp-controller="Account" asp-action="Perfil" class="ft-profile-box">
            <img src="~/img/user-default.png" class="ft-profile-photo" />
            <div class="ft-profile-details">
                <span class="ft-profile-name">Usuário</span>
            </div>
            <span class="ft-logout-btn d-none"></span>
        </a>

        <a asp-controller="Account" asp-action="Logout" class="ft-logout-btn-absolute">
            <i class="bi bi-box-arrow-right"></i>
        </a>

    </nav>

    <div id="sidebar-spacer"></div>

    <div id="mainContent" class="ft-main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sidebar.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>