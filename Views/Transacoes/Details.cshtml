@model FinTrack.Models.Transacao
@{
    ViewData["Title"] = "Detalhes da Transação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ft-page-container">

    <h2 class="fw-bold text-white mb-3">Detalhes da Transação</h2>

    <div class="ft-card p-4">

        <dl class="row text-white">

            <dt class="col-sm-3">Data</dt>
            <dd class="col-sm-9">@Model.Data.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Valor</dt>
            <dd class="col-sm-9">@Model.Valor.ToString("C")</dd>

            <dt class="col-sm-3">Categoria</dt>
            <dd class="col-sm-9">@Model.Categoria.Nome</dd>

            <dt class="col-sm-3">Movimentação</dt>
            <dd class="col-sm-9">
                @if (Model.Tipo == FinTrack.Models.Transacao.TipoTransacao.Entrada)
                {
                    <span class="badge bg-success px-3 py-2">Entrada</span>
                }
                else
                {
                    <span class="badge bg-danger px-3 py-2">Saída</span>
                }
            </dd>

            <dt class="col-sm-3">Conta</dt>
            <dd class="col-sm-9">@Model.Conta.Nome</dd>

            <dt class="col-sm-3">Pagamento</dt>
            <dd class="col-sm-9">@Model.TipoPagamento.Nome</dd>

        </dl>

        <div class="mt-4 d-flex gap-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">Editar</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Voltar</a>
        </div>

    </div>

</div>

<style>
    .ft-card {
        background: rgba(255,255,255,.04);
        border: 1px solid rgba(255,255,255,.06);
        border-radius: 16px;
        backdrop-filter: blur(12px);
    }

    .ft-page-container {
        max-width: 1100px;
        margin: 0 auto;
    }
</style>
