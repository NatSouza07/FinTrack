@model FinTrack.Models.Transacao
@{
    ViewData["Title"] = "Editar Transação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ft-page-container">
    <h2 class="fw-bold text-white mb-3">Editar Transação</h2>
    <p class="text-secondary mb-4">Atualize as informações da transação selecionada.</p>

    <div class="ft-card p-4">

        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Data" class="form-label text-white-50"></label>
                <input asp-for="Data" class="form-control flatpickr" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Valor" class="form-label text-white-50"></label>
                <input asp-for="Valor" class="form-control ft-money" autocomplete="off" data-val="false" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label text-white-50">Categoria</label>

                <select asp-for="CategoriaId" class="form-select" id="categoriaSelect">
                    @foreach (var cat in ViewBag.Categorias)
                    {
                        <option value="@cat.Id" data-tipo="@((int)cat.Tipo)" selected="@(cat.Id == Model.CategoriaId)">
                            @cat.Nome
                        </option>
                    }
                </select>

                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label text-white-50">Movimentação</label>
                <input id="movimentacao" class="form-control" readonly />
                <input type="hidden" asp-for="Tipo" id="TipoHidden" />
            </div>

            <div class="mb-3">
                <label asp-for="TipoPagamentoId" class="form-label text-white-50"></label>
                <select asp-for="TipoPagamentoId" class="form-select" asp-items="ViewBag.TiposPagamento"></select>
                <span asp-validation-for="TipoPagamentoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContaId" class="form-label text-white-50"></label>
                <select asp-for="ContaId" class="form-select" asp-items="ViewBag.Contas"></select>
                <span asp-validation-for="ContaId" class="text-danger"></span>
            </div>

            <div class="mt-4 d-flex gap-3">
                <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>

                <button type="submit"
                        class="btn fw-bold px-4"
                        style="background:#ffd700; color:#000; border-radius:10px;">
                    Salvar Alterações
                </button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/pt.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.10.5"></script>

    <script>
        flatpickr(".flatpickr", {
            dateFormat: "Y-m-d",
            altInput: true,
            altFormat: "d/m/Y",
            locale: "pt"
        });

        const categoriaSelect = document.getElementById("categoriaSelect");
        const movInput = document.getElementById("movimentacao");
        const tipoHidden = document.getElementById("TipoHidden");

        function atualizarMovimentacao() {
            let opt = categoriaSelect.options[categoriaSelect.selectedIndex];
            let tipo = opt ? opt.getAttribute("data-tipo") : null;

            if (tipo === "1") {
                movInput.value = "Entrada";
                tipoHidden.value = "1";
            }
            else if (tipo === "2") {
                movInput.value = "Saída";
                tipoHidden.value = "2";
            }
        }

        categoriaSelect.addEventListener("change", atualizarMovimentacao);
        atualizarMovimentacao();

        document.addEventListener("DOMContentLoaded", function () {

            AutoNumeric.multiple('.ft-money', {
                digitGroupSeparator: ".",
                decimalCharacter: ",",
                decimalPlaces: 2,
                currencySymbol: "R$ ",
                currencySymbolPlacement: "p"
            });

            const form = document.querySelector("form");
            form.addEventListener("submit", function () {
                document.querySelectorAll(".ft-money").forEach(function (el) {
                    let v = el.value ?? "";
                    v = v.replace(/\s/g, "").replace(/R\$|r\$/g, "").replace(/\./g, "").replace(",", ".");
                    el.value = v;
                });
            });
        });
    </script>
}

<style>
    .ft-card {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        backdrop-filter: blur(12px);
    }

    .ft-page-container {
        max-width: 1100px;
        margin: 0 auto;
    }
</style>
